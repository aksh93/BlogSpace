<br><br>
<div class="container">
<p id="notice"><%= notice %></p>

<p style="font-size:25px; font-family:'Poppins', sans-serif"> 
  <%=@post.title %>
</p>
<span style="float:left"><%= current_user.email %></span><br>
<span style="float:right"><%= (@post.created_at).strftime("%d %b %y") %></span><br>

<p>
  <%=simple_format(@post.body)%>
</p>

<h3>Comments</h3>
<%= form_for @comment, url: post_comments_path(@post) do |f| %>
	<%= f.text_area :comment , style: 'width:80%' %>
	<br/>
	<%= f.submit 'Submit' %>
<% end %>
<br/>

<% @post.comments.each do |comment| %>
	<p><%= simple_format(comment.comment) %></p>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
</div>