<%=simple_form_for(@post) do |f| %>

  <div class="field">
    <%= f.input :title, :size => '100x1' %>
  </div>
  <div>
  <br>
    <%= f.cktext_area :body, :cols => 40,:ckeditor => {:uiColor => '#add8e6', :toolbar => 'mini'} %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
