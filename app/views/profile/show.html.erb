<br>
<div class = "row">

<div class = "col-sm-3">
    <div class = "row">
      <div class = "col-sm-1"></div>
      <div class = "col-sm-4">
        <%= image_tag @user.avatar.url(:medium) %>
      </div>
      <div class = "col-sm-7"></div>
    </div>
    <hr>
    <div class="container">
      <span style="font-size:20px; font-family:'Poppins', sans-serif"><%= @user.name %></span><br>
      <%= @user.email %>
    </div>
  </div>

  <div class = "col-sm-8">
      <div class="container">
          <ul class="nav nav-tabs">
                  <li class="active"><a data-toggle="tab" href="#posts">Posts</a></li>
                  <li><a data-toggle="tab" href="#following">Following</a></li>
          </ul>
      
      <div class="tab-content">
            <div id="posts" class="tab-pane fade in active">
                    <div class="container">
                          <p id="notice"><%= notice %></p>
                          <% if @user.id == current_user.id %>
                              <span style="float:right"><%= link_to '<i class="fa fa-plus"> New Post</i>'.html_safe, new_post_path %>
                              </span>
                          <% end %>
            
                          <% @posts.each do |post| %>
                          <br>
                          <span style="font-size:25px; font-family:'Poppins', sans-serif"><%= post.title %></span><br>
                          <span style="font-size:15px; font-family:sans-serif"><%= truncate(strip_tags(post.body),length: 500) %></span><br>
                          <span>
                          <%= link_to '<i class="fa fa-eye"> Show </i>'.html_safe, post %>
                          <% if post.user_id == current_user.id %>
                          <%= link_to '<i class="fa fa-pencil"> Edit </i>'.html_safe, edit_post_path(post) %>
                          <%= link_to '<i class="fa fa-trash"> Delete </i>'.html_safe, post, method: :delete, data: { confirm: 'Are you sure?' } %>
                          <% end %>
                          <span style="float:right"><%= (post.created_at).strftime("%d %b %y") %></span><br>
                          </span>
                          <hr>
                          <% end %>
                    </div>            
              </div>
        <div id="following" class="tab-pane fade">
        </div>
      </div>
    </div>
  </div>
</div>
